{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",        // Indique que votre code source est dans src
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": ["ESNext"],
    "strictNullChecks": false
  },
  "compileOnSave": true,
  "include": ["src"]
}
